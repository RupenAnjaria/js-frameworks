*
 margin 0
 padding 0
 box-sizing border-box

html, body
  height 100%

body
  font-family 'Lucida Grande', verdana, sans-serif;
  -webkit-font-smoothing: antialiased;
  padding 10px
  font-size 15px
  font-style normal
  font-variant normal
  font-weight normal
  background-color #E6ECF1
  color #333


body > header
    padding 30px 20px

    &:before
      content: '';
      width 10px;
      background-color #00AEEF;
      float left;
      height 50px;
      margin-right 5px;

body > footer
    font-size 12px
    font-style italic
    margin 10px 25px

#containerA
  width 300px
  height 300px
  border 3px solid #018E8E
  position relative

  &:after
    content 'A'
    position absolute
    top 10px
    left 10px
    font-size 2em
    color #018E8E

#containerB
  width 200px
  height 200px
  margin: 60px 0 0 60px
  border 2px solid #D89858
  position relative
  
  &:after
    content 'B'
    position absolute
    top 10px
    left 10px
    font-size 1.5em
    color #D89858

#containerC
  width 100px
  height 100px
  margin: 70px 0 0 70px
  border 2px solid #ce0e91
  position relative

  &:after
    content 'C'
    position absolute
    top 10px
    left 10px
    font-size 1.1em
    color #ce0e91

#eventslist
  position absolute
  top 100px
  left 400px
  width 400px
  height 300px
  overflow auto

  ul
    list-style none

    li:first-child
      font-weight bold

  span
    width 50px
    padding 5px 15px 0 0
    display inline-block
