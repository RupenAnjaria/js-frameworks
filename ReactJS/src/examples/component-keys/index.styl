*
 margin 0
 padding 0
 box-sizing border-box

html, body
  height 100%

body
  font-family 'Lucida Grande', verdana, sans-serif;
  -webkit-font-smoothing: antialiased;
  padding 10px
  font-size 15px
  font-style normal
  font-variant normal
  font-weight normal
  background-color #E6ECF1
  color #333
  min-width 1100px


body > header
    padding 30px 20px

    &:before
      content: '';
      width 10px;
      background-color #00AEEF;
      float left;
      height 50px;
      margin-right 5px;

body > footer
    font-size 1em
    font-style italic
    margin 10px 25px

blockquote
  margin 20px 40px
  font-size 1.1em
  font-style italic
  border 2px dashed #9C93C7
  padding 10px
  color #757272

h3
  padding: 20px 0 20px 0;
  font-size: 1.3em;

  #content &
    padding: 30px 0 10px 0





/* http://css-tricks.com/snippets/css/clear-fix/ */
.clearfix:after
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;

#content
  margin-left 20px

.displayrow
  height 100px
  padding 0 0 0 20px
  margin 5px

.title
  float left
  height 100%
  width 220px
  padding 32px 0 0 0
  font-size 1em
  font-weight bold

  &:after
    content ' : '
    height 100%
    color green
    font-size 1.1em

.itemlist
  float left
  height 100%

.item
  border-radius 50%
  border 1px solid #000
  width 60px
  height 60px
  display inline-block
  padding 19px 0 0 23px
  margin 15px
  font-weight bold
  background-color: transparent;
  -transition: background-color 200ms ease-in, border 2s ease-out
  -webkit-transition: background-color 200ms ease-in, border 2s ease-out

  /* http://llllll.li/randomColor/ */
  &.highlight
    border 3px dashed #018E8E

  &.marker_1
    background-color #D89858

  &.marker_2
    background-color #75EA7F

  &.marker_3
    background-color #ce0e91

  &.marker_4
    background-color #8eede9

  &.marker_5
    background-color #c7d664

  &.marker_6
    background-color #fcb79f

  &.marker_7
    background-color #a985d3

  &.marker_8
    background-color #e56276

  &.marker_9
    background-color #ffeea5

  .notes &
    width 30px
    height 30px
    padding 6px 0 0 10px
    font-size 0.8em
    margin 7px

    &.highlight
      border-width 1px

.notes,
.info
  margin: 5px 20px 5px 20px

.options
  margin: 5px 0 5px 270px

  button
    margin 10px
    width 150px
    height 50px
    color black








